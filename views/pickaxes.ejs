<div id="pickaxes">
<% for (x in pickTypes) {
  var isOwned = 0;
  for (i in user.stats.pickaxes) {
    if (x==user.stats.pickaxes[i]) {
      isOwned = 1;
    }
  }
  if (isOwned == 1) {%>
    <span id="pick_<%=pickTypes[x].id%>" onclick="choosePick(<%=pickTypes[x].id%>)">
      <img class="pickicons" height="100px" src="./images/picks/<%=pickTypes[x].id%>.png"/><br>
      <%=pickTypes[x].name%><br>
      <p style="color:yellow">Owned</p><br>
      </span>
  <%} else {%>
    <span class="lockedpick" id="pick_<%=pickTypes[x].id%>" onclick="doBuyPickaxe(<%=pickTypes[x].id%>)">
      <img class="pickicons" height="100px" src="./images/picks/<%=pickTypes[x].id%>.png"/><br>
      <%=pickTypes[x].name%><br>
    Cost:<%=pickTypes[x].cost.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %><br></span>
  <%}
  isOwned = 0;
}%>
</div>
<span id="clear"><br></span>
